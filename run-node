#!/bin/bash
# WebUI@6080
rm /tmp/.X0-lock && mv /var/log/*.log /root/*.log
export LIBGL_ALWAYS_SOFTWARE=1&&Xvfb :0 -screen 0 1280x720x24 -ac&	
export DISPLAY=:0&&startxfce4&	
x0vncserver -display :0 -passwordfile /root/.vnc/passwd&

# start monitoring of kubelet state & qrack output
filebeat setup -e
metricbeat setup &
service metricbeat start &
service filebeat start &

# start the SimulaQron, ProjectQ, Qrack train
simulaqron set backend projectq &
simulaqron &

# precompile cl kernels for Qrack	
cd /qrack/_build/ && ./qrack_cl_precompile

# run benchmark for load & output simulation
./benchmarks --proc-opencl-single -m=-1 --layer-qfusion --measure-output=/var/log/measured_supreme.log [supreme]
./benchmarks --proc-opencl-single -m=-1 --layer-qfusion --measure-output=/var/log/measured_cosmos.log [cosmos]
./benchmarks --proc-opencl-single -m=-1 --layer-qfusion --measure-output=/var/log/measured_qft.log [qft]

# end run, do not stop container ( debug feature )
tail -f /dev/null
